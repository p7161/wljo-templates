<div class="post-item col-xxl-6 col-xl-8 col-lg-8 col-sm-12">
    <div class="row g-0 border rounded cover-post overflow-hidden flex-md-row mb-4 post-card position-relative d-flex align-items-end">
        <a href="{full-link}" class="text-dark text-decoration-none position-absolute display-block cover-img">
			<picture>
				  [xfgiven_main_img_webp]<source srcset="[xfvalue_main_img_webp]" type="image/webp">[/xfgiven_main_img_webp]
				  <source srcset="[xfvalue_main_img]">
				  <img src="[xfvalue_main_img]" alt="{title}" width="100%" height="100%" loading="lazy">
			</picture>
        </a>
        <div class="col p-4 d-flex flex-column position-relative cover-title">
            <span class="text-white text-decoration-none">
                <strong class="d-inline-block text-uppercase tiny letter-spacing2 mb-1">{category}</strong>
            </span>
            <h2 class="mb-2 fw-bold">
                <a href="{full-link}" class="text-decoration-none text-white">
                    {title}
                </a>
            </h2>
        </div>
    </div>
</div>
