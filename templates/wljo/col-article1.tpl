<div class="post-item col-xxl-3 col-xl-4 col-lg-4 col-sm-6">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 post-card position-relative">
        <a href="{full-link}" class="text-dark text-decoration-none img-overflow display-block">
			<picture>
			  [xfgiven_main_img_webp]<source srcset="[xfvalue_main_img_webp]" type="image/webp">[/xfgiven_main_img_webp]
			  <source srcset="[xfvalue_main_img]">
			  <img src="[xfvalue_main_img]" alt="{title}" width="100%" height="100%" loading="lazy">
			</picture>
        </a>
        <div class="col p-3 pt-2 d-flex flex-column position-static mb-2">
            <span class="text-gray-500 text-decoration-none"> 
                <strong class="d-inline-block text-uppercase tiny letter-spacing2 mb-1">{category}</strong>
            </span>
            <h5 class="mb-2 fw-bold">
                <a href="{full-link}" class="text-dark text-decoration-none text-2-line">
                    {title}
                </a>
            </h5>
            <p class="card-text">
                <a href="{full-link}" class="text-dark text-decoration-none text-2-line">
                    {short-story limit="160"}
                </a>
            </p>
        </div>
    </div>
</div>
