<div class="post-item col-xxl-3 col-xl-4 col-lg-4 col-sm-6">
    <div class="row g-0 bg-light border rounded overflow-hidden flex-md-row mb-4 post-card position-relative d-flex align-items-center">
        <div class="col p-4 d-flex flex-column position-static">
            <span class="text-gray-500 text-decoration-none">
                <strong class="d-inline-block text-uppercase tiny letter-spacing2 mb-1">{category}</strong>
            </span>
            <h4 class="mb-2 fw-bold">
                <a href="{full-link}" class="text-dark text-decoration-none">
                    {title}
                </a>
            </h4>
            <p class="card-text">
                <a href="{full-link}" class="text-dark text-decoration-none text-2-line">
                    {short-story limit="160"}
                </a>
            </p>
        </div>
    </div>
</div>
